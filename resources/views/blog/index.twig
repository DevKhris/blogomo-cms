{% extends "layouts/app.twig" %}
{% block contents %}
	<div class="container-fluid">
		<div
			class="row">

			<!-- Blog Entries Column -->
			<div class="col-md-8">

				<h1 class="my-4">Blog
					<small>
						Recent Posts ({{ posts|length }})
					</small>
				</h1>

				{% for post in posts %}
					<!-- Blog Post -->
					<div class="card mb-4">
						<img class="card-img-top" src="{{ post.image }}" alt="{{ post.image }}" width="750" height="300">

						<div class="card-body">
							<h2 class="card-title">
								<a href="{{ url_for('post', {slug: post.slug }) }}" class="text-decoration-none">
									{{ post.title }}

								</a>
							</h2>
							<p class="card-text">
								{{ post.content }}
							</p>
							<a href="{{ url_for('post', {slug: post.slug }) }}" class="btn btn-primary">Continue reading &rarr;</a>


						</div>
						<div class="card-footer text-muted">
							Posted on January 1, 2020 by
							<a href="{{ post.slug }}">John Doe</a>
						</div>
					</div>
				{% else %}
					<p class="text-center">Not Posts found</p>
				{% endfor %}

				<div class="card my-4">
					<h5 class="card-header">Ads Widget</h5>
					<div class="card-body">
						Here goes the ads, for more info go to Settings.
					</div>
				</div>


				<!-- Pagination -->
				<ul class="pagination justify-content-center mb-4">
					<li class="page-item"></li>

					<a class="page-link disabled" href="#">&larr; Older</a>

				</li>
				<li class="page-item ">
					<a class="page-link" href="#">Newer &rarr;</a>
				</li>
			</ul>

		</div>

		<!-- Sidebar Widgets Column -->
		<div
			class="col-md-4">

			<!-- Search Widget -->
			<div class="card my-4">
				<h5 class="card-header">Search</h5>
				<div class="card-body">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Search for...">
						<span class="input-group-append">
							<button class="btn btn-secondary" type="button">Go!</button>
						</span>
					</div>
				</div>
			</div>

			<!-- Categories Widget -->
			<div class="card my-4">
				<h5 class="card-header">Categories</h5>
				<div class="card-body">
					<div class="row">
						<div class="col-lg-6">
							<ul class="list-unstyled mb-0">
								<li>
									<a href="#">Web Design</a>
								</li>
								<li>
									<a href="#">Development</a>

								</li>
								<li>
									<a href="#">Security</a>
								</li>
							</ul>
						</div>
						<div class="col-lg-6">
							<ul class="list-unstyled mb-0">
								<li>
									<a href="#">Software</a>
								</li>
								<li>
									<a href="#">Courses</a>
								</li>
								<li>
									<a href="#">Tutorials</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>

			<!-- Ads Widget -->
			<div class="card my-4">
				<h5 class="card-header">Ads Widget</h5>
				<div class="card-body">
					Here goes the ads, for more info go to Settings.
				</div>
			</div>

			<div class="card my-4">
				<h5 class="card-header">Social Widget</h5>
				<div class="card-body">
					Here goes the social integrations, for more info go to Settings.
				</div>
			</div>


		</div>

	</div>

</div>{% endblock %}
